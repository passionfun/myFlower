<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:background="@mipmap/img_login_bg"
        android:orientation="vertical"
        tools:ignore="UselessParent">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="64dp"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/img_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="41dp"
            android:text="LOGIN"
            android:textColor="#544944"
            android:textSize="21sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="286dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edit_account_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="18dp"
            android:text="E-mail"
            android:textColor="#9A9A9A"
            android:textSize="14sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:background="#E4E4E4" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="11dp"
            android:background="@null"
            android:hint="@string/input_phone_number"
            android:inputType="textEmailAddress"
            android:textColor="#333333"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="286dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="13dp"
        android:background="@drawable/edit_account_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="18dp"
            android:text="Password"
            android:textColor="#9A9A9A"
            android:textSize="14sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:background="#E4E4E4" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="11dp"
            android:background="@null"
            android:hint="@string/input_password"
            android:inputType="textPassword"
            android:textColor="#333333"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="13sp" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="21dp"
        android:background="@mipmap/img_login_button_bg"
        android:text="@string/login"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/tv_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="Forget the password ï¼Ÿ"
        android:textColor="#BDBDBD"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <TextView
        android:layout_marginBottom="18dp"
        android:id="@+id/tv_create_new_account"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:drawableEnd="@mipmap/image_arrow"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="@string/create_new_account"
        android:textColor="#87BC52"
        android:textSize="12sp" />


</LinearLayout>




