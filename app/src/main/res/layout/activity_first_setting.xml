<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_root"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="26dp"
        android:title="">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="35dp"
            android:scaleType="center"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:src="@mipmap/img_back" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:paddingEnd="24dp"
            android:text="@string/save"
            android:textColor="#87BC52"
            android:textSize="15sp" />

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        android:drawableEnd="@mipmap/img_required"
        android:drawablePadding="2dp"
        android:text="@string/equipment_name"
        android:textColor="#999999"
        android:textSize="13sp" />


    <EditText
        android:textCursorDrawable="@drawable/edit_cursor_color"
        android:id="@+id/et_input_equipment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:hint="@string/please_input_equipment_name"
        android:textColor="#333333"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="12dp"
        android:background="#C6C6C6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:text="@string/plant_name"
        android:textColor="#999999"
        android:textSize="13sp" />


    <EditText
        android:textCursorDrawable="@drawable/edit_cursor_color"
        android:id="@+id/et_input_plant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:hint="@string/please_input_plant_name"
        android:textColor="#333333"
        android:textSize="15sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="12dp"
        android:background="#C6C6C6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:text="@string/growth_circle"
        android:textColor="#999999"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_plant_cycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:drawableEnd="@mipmap/img_personal_center_arrow"
        android:text=""
        android:textColor="#333333"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="12dp"
        android:background="#C6C6C6" />

</LinearLayout>
