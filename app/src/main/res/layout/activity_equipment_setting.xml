<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scroll_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="24dp"
            android:text="设备名称"
            android:textColor="#999999"
            android:textSize="13sp" />


        <EditText
            android:id="@+id/et_equipName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:hint="@string/input_password"
            android:text="WG310+2222"
            android:textColor="#333333"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="12dp"
            android:background="#C6C6C6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="14dp"
            android:text="节水模式"
            android:textColor="#999999"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:button="@drawable/sel_cb_button"
            android:background="@drawable/sel_cb_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="13dp"
            android:background="#C6C6C6" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:text="开启光照时间"
            android:textColor="#999999"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_lightStart"
            android:layout_marginEnd="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:drawableEnd="@mipmap/img_personal_center_arrow"
            android:text="去设置"
            android:textColor="#333333"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="12dp"
            android:background="#C6C6C6" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:text="禁止光照时间开启"
            android:textColor="#999999"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_BanStart"
            android:layout_marginEnd="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:drawableEnd="@mipmap/img_personal_center_arrow"
            android:text="去设置"
            android:textColor="#333333"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="12dp"
            android:background="#C6C6C6" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:text="禁止光照时间关闭"
            android:textColor="#999999"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_BanStop"
            android:layout_marginEnd="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:drawableEnd="@mipmap/img_personal_center_arrow"
            android:text="去设置"
            android:textColor="#333333"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="12dp"
            android:background="#C6C6C6" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:text="设备分组"
            android:textColor="#999999"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_group"
            android:layout_marginEnd="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:drawableEnd="@mipmap/img_personal_center_arrow"
            android:text="去设置"
            android:textColor="#333333"
            android:textSize="15sp" />

    </LinearLayout>

</ScrollView>


