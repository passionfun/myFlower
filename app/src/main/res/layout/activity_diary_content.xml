<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<FrameLayout
    android:layout_width="match_parent"
    android:background="#d6000000"
    android:layout_height="match_parent">


        <LinearLayout
            android:layout_marginTop="88dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_width="292dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/ll_diary_content_bg"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_diary_cover"
                    android:src="@mipmap/img_diary_cover_empty"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    />

                <TextView
                    android:layout_marginTop="12dp"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:layout_marginStart="20dp"
                    android:text="植物名称"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_plant_name"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:layout_marginStart="20dp"
                    android:text="满天星"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="5dp"
                    android:background="@mipmap/img_dotted_background" />

                <TextView
                    android:layout_marginTop="9dp"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:layout_marginStart="20dp"
                    android:text="设备名称"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_equipment_name"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:layout_marginStart="20dp"
                    android:text="WG222+333"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="8dp"
                    android:background="@mipmap/img_dotted_background" />



                <TextView
                    android:layout_marginTop="8dp"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:layout_marginStart="20dp"
                    android:text="摆放位置"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_location"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:layout_marginStart="20dp"
                    android:text="客厅的茶几上"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="8dp"
                    android:background="@mipmap/img_dotted_background" />


                <TextView
                    android:layout_marginTop="8dp"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:layout_marginStart="20dp"
                    android:text="种植时间"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_plant_time"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:layout_marginBottom="27dp"
                    android:layout_marginStart="20dp"
                    android:text="2017年08月02日 11:50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/img_close_diary_content"
                    android:layout_marginTop="66dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="47dp"
                    android:src="@mipmap/img_close_diary_content"/>
            </FrameLayout>
        </LinearLayout>



</FrameLayout>

</ScrollView>
