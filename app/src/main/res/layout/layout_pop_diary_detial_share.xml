<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="309dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/ll_diary_content_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_diary_cover"
            android:layout_width="242dp"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_diary_cover_empty" />

        <TextView
            android:id="@+id/tv_diary_content"
            android:layout_width="242dp"
            android:layout_height="match_parent"
            android:textColor="#333333"
            android:textSize="11sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_cancel_share"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="23dp"
        android:layout_marginTop="25dp"
        android:src="@mipmap/img_cancle_share" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:layout_marginEnd="9dp"
        android:layout_marginStart="9dp"
        android:background="@drawable/ll_pop_add_picture_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_marginEnd="220dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="23dp"
                android:background="#DEDEDE" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="13dp"
                android:text="分享至"
                android:textColor="#333333"
                android:textSize="15sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="220dp"
                android:layout_marginTop="23dp"
                android:background="#DEDEDE" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_save_picture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/img_save_picture" />

            <ImageView
                android:id="@+id/img_share_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/img_share_qq" />

            <ImageView
                android:id="@+id/img_share_wechat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/img_share_wechat" />

            <ImageView
                android:id="@+id/img_share_friends"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/img_share_friends" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
