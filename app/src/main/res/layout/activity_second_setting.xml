<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <include layout="@layout/layout_toolbar" />

    <TextView
        android:foreground="@drawable/ic_touch_fg"
        android:id="@+id/tv_equipment_setting"
        android:layout_marginTop="45dp"
        android:layout_marginStart="34dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:text="设备设置"
        android:textSize="15sp"
        android:drawablePadding="18dp"
        android:drawableStart="@mipmap/img_equipment_setting"
        android:drawableEnd="@mipmap/img_personal_center_arrow"
        android:layout_marginEnd="20dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="22dp"
        android:background="#C6C6C6" />

    <TextView
        android:foreground="@drawable/ic_touch_fg"
        android:id="@+id/tv_plant_setting"
        android:layout_marginTop="25dp"
        android:layout_marginStart="34dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:text="植物设置"
        android:textSize="15sp"
        android:drawablePadding="18dp"
        android:drawableStart="@mipmap/img_plant_setting"
        android:drawableEnd="@mipmap/img_personal_center_arrow"
        android:layout_marginEnd="20dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="22dp"
        android:background="#C6C6C6" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:foreground="@drawable/ic_touch_fg"
            android:id="@+id/tv_new_guide"
            android:layout_marginTop="25dp"
            android:layout_marginStart="34dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:text="消息推送"
            android:textSize="15sp"
            android:drawablePadding="18dp"
            android:drawableStart="@mipmap/img_equipment_setting"
            android:layout_marginEnd="20dp"
            />
        <CheckBox
            android:id="@+id/cb_push"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="26dp"
            android:checked="true"
            android:button="@drawable/sel_cb_button"
            android:background="@drawable/sel_cb_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="22dp"
        android:background="#C6C6C6" />

    <TextView
        android:foreground="@drawable/ic_touch_fg"
        android:id="@+id/tv_equipment_info"
        android:layout_marginTop="25dp"
        android:layout_marginStart="34dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:text="设备信息"
        android:textSize="15sp"
        android:drawablePadding="18dp"
        android:drawableStart="@mipmap/img_setting_normal"
        android:drawableEnd="@mipmap/img_personal_center_arrow"
        android:layout_marginEnd="20dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="22dp"
        android:background="#C6C6C6" />

    <TextView
        android:foreground="@drawable/ic_touch_fg"
        android:id="@+id/tv_clear_data"
        android:layout_marginTop="34dp"
        android:layout_marginStart="34dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#75B62B"
        android:text="清除当前数据"
        android:textSize="15sp"
        android:drawablePadding="18dp"
        android:drawableStart="@mipmap/img_delete_green"
        android:layout_marginEnd="20dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="22dp"
        android:background="#C6C6C6" />

</LinearLayout>
