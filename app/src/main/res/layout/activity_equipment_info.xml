<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <include layout="@layout/layout_toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="26dp"
        android:text="MAC地址"
        android:textColor="#999999"
        android:textSize="13sp" />


    <TextView
        android:id="@+id/tv_mac_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:text="102:111:233"
        android:textColor="#333333"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="12dp"
        android:background="#C6C6C6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="9dp"
        android:text="序列号"
        android:textColor="#999999"
        android:textSize="13sp" />


    <TextView
        android:id="@+id/tv_serial_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:text="1234567890"
        android:textColor="#333333"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="12dp"
        android:background="#C6C6C6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:text="设备型号"
        android:textColor="#999999"
        android:textSize="13sp" />


    <TextView
        android:id="@+id/tv_equipment_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:text="WG222+333"
        android:textColor="#333333"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="12dp"
        android:background="#C6C6C6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:text="软件版本"
        android:textColor="#999999"
        android:textSize="13sp" />

<FrameLayout
    android:layout_marginEnd="26dp"
    android:layout_marginTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="WG222+333"
        android:textColor="#333333"
        android:textSize="15sp" />



    <TextView
        android:id="@+id/tv_latest_version"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="最新"
        android:visibility="gone"
        android:textColor="#87BC52"
        android:textSize="15sp" />

    <FrameLayout
        android:id="@+id/frame_update"
        android:visibility="gone"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_upgrading"
            android:src="@mipmap/img_update_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/img_rect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>



    <ImageView
        android:visibility="gone"
        android:id="@+id/img_upgrade"
        android:layout_gravity="end"
        android:src="@mipmap/img_upgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</FrameLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="14dp"
        android:background="#C6C6C6" />

</LinearLayout>
