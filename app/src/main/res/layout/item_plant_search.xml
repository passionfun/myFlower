<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content">

<bocai.com.yanghuaji.util.widget.RoundAngleImageView
    android:layout_width="320dp"
    android:id="@+id/image"
    android:layout_height="153dp"
    app:roundHeightLeftUp="5dp"
    app:roundHeightLeftBottom="5dp"
    app:roundHeightRightUp="5dp"
    android:src="@mipmap/img_main_empty"
    app:roundHeightRightBottom="5dp"/>

    <TextView
        android:id="@+id/tv_name"
        android:paddingStart="15dp"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical"
        android:text="玫瑰花"
        android:layout_gravity="bottom"
        android:background="@mipmap/img_plant_tint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</FrameLayout>
