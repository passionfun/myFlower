<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/ll_root"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="43dp"
        android:layout_marginStart="29dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                android:textColor="#333333"
                android:textSize="24sp"
                android:text="沉迷工作的网银少女"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tv_edit_personal_data"
                android:textColor="#666666"
                android:textSize="12sp"
                android:gravity="center"
                android:drawablePadding="6dp"
                android:drawableEnd="@mipmap/img_edit"
                android:text="@string/check_and_edit_personal_data"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <FrameLayout
            android:layout_marginEnd="32dp"
            android:layout_width="92dp"
            android:layout_height="92dp">


            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/img_portrait_shadow"
                android:layout_width="92dp"
                android:layout_height="92dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_portrait"
                android:layout_width="70dp"
                android:layout_gravity="center"
                android:src="@mipmap/img_portrait_empty"
                android:layout_height="70dp" />
        </FrameLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="39dp"
        android:background="#E6E6E6" />

    <TextView
        android:id="@+id/tv_my_planting_record"
        android:layout_marginTop="10dp"
        android:layout_marginStart="34dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:text="@string/my_planting_record"
        android:textColor="#333333"
        android:textSize="15sp"
        android:drawablePadding="20dp"
        android:drawableStart="@mipmap/img_planting_record"
        android:drawableEnd="@mipmap/img_personal_center_arrow"
        android:layout_marginEnd="20dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="29dp"
        android:background="@mipmap/img_dotted_background" />

    <TextView
        android:id="@+id/tv_system_notification"
        android:layout_marginTop="10dp"
        android:layout_marginStart="34dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/system_notification"
        android:gravity="center_vertical"
        android:textColor="#333333"
        android:textSize="16sp"
        android:drawablePadding="20dp"
        android:drawableStart="@mipmap/img_no_message"
        android:drawableEnd="@mipmap/img_personal_center_arrow"
        android:layout_marginEnd="20dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="29dp"
        android:background="@mipmap/img_dotted_background" />

    <TextView
        android:id="@+id/tv_modify_password"
        android:layout_marginTop="10dp"
        android:layout_marginStart="34dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/modify_password"
        android:gravity="center_vertical"
        android:textColor="#333333"
        android:textSize="15sp"
        android:drawablePadding="20dp"
        android:drawableStart="@mipmap/img_modify_password"
        android:drawableEnd="@mipmap/img_personal_center_arrow"
        android:layout_marginEnd="20dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="29dp"
        android:background="@mipmap/img_dotted_background" />

    <TextView
        android:id="@+id/tv_setting"
        android:layout_marginTop="10dp"
        android:layout_marginStart="34dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/setting"
        android:textColor="#333333"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:drawablePadding="20dp"
        android:drawableStart="@mipmap/img_settings"
        android:drawableEnd="@mipmap/img_personal_center_arrow"
        android:layout_marginEnd="20dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="29dp"
        android:background="@mipmap/img_dotted_background" />

    <TextView
        android:id="@+id/tv_exit"
        android:layout_marginTop="10dp"
        android:layout_marginStart="34dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/quit_application"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="#75B62B"
        android:drawablePadding="20dp"
        android:drawableStart="@mipmap/img_power"
        android:drawableEnd="@mipmap/img_personal_center_arrow_green"
        android:layout_marginEnd="20dp"
        />



</LinearLayout>
