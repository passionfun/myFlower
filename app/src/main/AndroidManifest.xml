<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="bocai.com.yanghuaji">


    <!-- 这个权限用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 这个权限用于访问GPS定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- 用于访问wifi网络信息，wifi信息会用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 获取运营商信息，用于支持提供运营商信息相关的接口 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 这个权限用于获取wifi的获取权限，wifi信息会用来进行网络定位 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- 用于读取手机当前的状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 写入扩展存储，向扩展卡写入数据，用于写入离线定位数据 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 访问网络，网络定位需要上网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- SD卡读取权限，用户写入离线定位数据 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.RECEIVE_USER_PRESENT" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- Optional for location -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" /> <!-- 用于开启 debug 版本的应用在6.0 系统上 层叠窗口权限 -->
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />


    <application
        android:name=".base.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.account.LoginActivity"
            android:theme="@style/BaseTheme"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.account.BindPhoneActivity"
            android:theme="@style/BaseTheme" />
        <activity
            android:name=".ui.account.RegisterActivity"
            android:theme="@style/BaseTheme" />
        <activity
            android:name=".ui.account.ForgetPasswordActivity"
            android:theme="@style/BaseTheme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.main.MainActivity"
            android:theme="@style/BaseTheme" />
        <activity
            android:name=".ui.personalCenter.EditPersonalDataActivity"
            android:theme="@style/BaseTheme" />
        <activity
            android:name=".ui.personalCenter.ModifyPasswordActivity"
            android:theme="@style/BaseTheme" />
        <activity
            android:name=".ui.personalCenter.PlantingRecordActivity"
            android:theme="@style/BaseTheme" />
        <activity
            android:name=".ui.personalCenter.SystemNotificationActivity"
            android:theme="@style/BaseTheme" />
        <activity
            android:name=".ui.personalCenter.SettingActivity"
            android:theme="@style/BaseTheme" />
        <activity
            android:name=".ui.plantingDiary.AddDiaryActivity"
            android:theme="@style/BaseTheme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.plantingDiary.DiaryListActivity"
            android:theme="@style/BaseTheme" />
        <activity
            android:name=".ui.plantingDiary.DiaryDetailActivity"
            android:theme="@style/BaseTheme" />
        <activity
            android:name=".ui.plantingDiary.LocationActivity"
            android:theme="@style/BaseTheme" />
        <activity
            android:name=".ui.intelligentPlanting.AddEquipmentActivity"
            android:theme="@style/BaseTheme" />
        <activity
            android:name=".ui.intelligentPlanting.AddEquipmentDisplayActivity"
            android:theme="@style/BaseTheme" />
        <activity
            android:name=".ui.intelligentPlanting.AddWifiActivity"
            android:theme="@style/BaseTheme" />
        <activity
            android:name=".ui.intelligentPlanting.FirstSettingActivity"
            android:theme="@style/BaseTheme" />
        <activity
            android:name=".ui.intelligentPlanting.SecondSettingActivity"
            android:theme="@style/BaseTheme" />
        <activity
            android:name=".ui.intelligentPlanting.EquipmentSettingActivity"
            android:theme="@style/BaseTheme" />
        <!--图片剪切-->
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".ui.intelligentPlanting.PlantSettingActivity" />
        <activity android:name=".ui.intelligentPlanting.EquipmentInfoActivity" />
        <activity android:name=".ui.intelligentPlanting.ConnectActivity" />
        <activity android:name=".ui.intelligentPlanting.ConnectSuccessActivity" />
        <activity android:name=".ui.intelligentPlanting.ConnectFailedActivity" />
        <activity android:name=".ui.personalCenter.GuideActivity" />
        <activity
            android:name=".ui.intelligentPlanting.AddPlantActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ui.intelligentPlanting.GroupManagerActivity" />
        <activity android:name=".ui.intelligentPlanting.EditGroupActivity" />
        <activity android:name=".ui.intelligentPlanting.PlantingDateAct"/>
        <activity android:name=".ui.plantingDiary.WriteDiaryActivity"/>

        <activity
            android:name="me.iwf.photopicker.PhotoPickerActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="bocai.com.yanghuaji.provider"
            android:exported="false"
            android:grantUriPermissions="true"
            tools:replace="android:authorities">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths"
                tools:replace="android:resource"/>
        </provider>
    </application>

</manifest>